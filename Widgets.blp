using Gtk 4.0;
using Gdk 4.0;

Window TopBar {
    CenterBox {
        styles ["main-wrapper"]

        [start]
        Box {
            spacing: 8;

            Box WorkspacesWidget {
                styles ["widget", "workspaces"]

                Button { Label { label: "1";  } }
                Button { Label { label: "2";  } }
                Button { Label { label: "3";  } }
                Button { Label { label: "4";  } }
                Button { Label { label: "5";  } }
                Button { Label { label: "6";  } }
                Button { Label { label: "7";  } }
                Button { Label { label: "8";  } }
                Button { Label { label: "9";  } }
                Button { Label { label: "10"; } }
            }
        }

        [end]
        Box {
            spacing: 4;

            Button HtopWidget {
                styles ["widget", "terminal", "padded", "clickable"]

                Label {
                    label: "Htop";
                }
            }

            Button WeatherWidget {
                styles ["widget", "weather", "padded", "clickable"]

                Label {}
            }

            CenterBox LanguageWidget {
                styles ["widget", "language", "padded"]

                [center]
                Label {}
            }

            Box SoundWidget {
                styles ["widget", "sound", "padded"]
                spacing: 10;
                orientation: horizontal;

                Image {
                    icon-name: "dialog-question";
                }

                Scale {
                    styles ["sound-slider"]
                    adjustment: Adjustment {
                        lower: 0;
                        upper: 1;
                    };
                }
            }

            Box CPUWidget {
                styles ["widget", "cpu", "padded"]
                spacing: 3;
                orientation: horizontal;

                Label { use-markup: true; }
                Label { use-markup: true; }
                Label { use-markup: true; }
                Label { use-markup: true; }
                Label { use-markup: true; }
                Label { use-markup: true; }
                Label { use-markup: true; }
                Label { use-markup: true; }
                Label { use-markup: true; }
                Label { use-markup: true; }
                Label { use-markup: true; }
                Label { use-markup: true; }
            }

            Button RAMWidget {
                styles ["widget", "memory", "padded", "clickable"]

                Label {}
            }

            Button NetworkWidget {
                styles ["widget", "network", "padded", "clickable"]
                cursor: Gdk.Cursor { name: "pointer"; };

                Label {}
            }

            CenterBox ClockWidget {
                styles ["widget", "clock", "padded"]

                [center]
                Label {}
            }

            Button PowerWidget {
                styles ["widget", "power", "padded", "clickable"]
                cursor: Gdk.Cursor { name: "pointer"; };

                Label {
                    label: "   ï€‘   ";
                }
            }
        }
    }
}

Window LogoutScreen {
    styles ["widget-logout"]
    visible: false;

    Box {
        styles ["widget-logout-wrapper"]
        orientation: horizontal;
        homogeneous: true;
        spacing: 200;

        Button LockButton {
            styles ["widget-logout-button"]
            Label { label: "Lock"; }
        }

        Button RebootButton {
            styles ["widget-logout-button"]
            Label { label: "Reboot"; }
        }

        Button ShutdownButton {
            styles ["widget-logout-button"]
            Label { label: "Shutdown"; }
        }

        Button LogoutButton {
            styles ["widget-logout-button"]
            Label { label: "Logout"; }
        }
    }
}

